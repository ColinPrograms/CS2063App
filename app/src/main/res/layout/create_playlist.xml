<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0">

    <EditText
        android:id="@+id/playlistName"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="#2196F3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Default"
        android:textAlignment="center"
        android:textSize="24sp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        app:layout_constraintBottom_toTopOf="@+id/addSongsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addSongsBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:height="64dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:text="Add Songs"
        app:layout_constraintBottom_toTopOf="@+id/recviewcreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playlistName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recviewcreate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addSongsBtn" />

    <ImageButton
        android:id="@+id/savePlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:background="@android:drawable/ic_menu_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>